{
  "name": "@monokai/monoco",
  "version": "0.0.4",
  "author": "Monokai",
  "license": "MIT",
  "description": "custom corners and borders for html elements",
  "repository": {
    "type": "git",
    "url": "https://github.com/monokai/monoco.git"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "main": "./dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./source": "./src/index.ts"
  },
  "files": [
    "./dist",
    "./src"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:production": "rollup -c --environment BUILD:production",
    "watch": "rollup src/index.ts --format umd --name monoco --watch --output.file=dist/umd/index.js"
  },
  "keywords": [
    "corner",
    "border",
    "squircle",
    "svg",
    "html"
  ],
  "devDependencies": {
    "@clarifynl/eslint-config-clarify": "^0.14.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "rollup": "^4.18.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "eslintConfig": {
    "extends": [
      "@clarifynl/clarify"
    ],
    "rules": {
      "import/extensions": 0
    }
  }
}
